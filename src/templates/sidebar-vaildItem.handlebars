{{!-- <div class="item" share-id={{shareId}}> </div>--}}

    <div class="itemEntry">
        <div class="entryAvatar {{entryAvatarCssClass}} icon icon-public-white"></div>
        <div class="entryDesc">
            <h5><b>分享連結{{shareId}}
                {{#if labelName}}
                (<span>{{labelName}}</span>)
                {{/if}}
            </b></h5>
            <div><span>{{entryEnableString}}訂閱</span> | <span>訂閱人數({{subscriberNum}})</span></div>
        </div>
        <button class="entryEdit icon icon-caret-dark rotate"></button>
    </div>

    <ul>
        <li>
            <input type="checkbox" class="checkbox" name="subscribable" id="subscribable{{shareId}}" {{#if isEnabled}} checked {{/if}}>
            <label for="subscribable{{shareId}}">開放訂閱</label>
            <span class="msg hidden"></span>
        </li>

        <li>
            <div>
                <div class="icon icon-edit"></div>
                <span>訂閱通知說明</span>
                <span class="msg hidden"></span>
            </div>
            <div><em>此說明即為訂閱郵件內文。</em></div>
            <textarea name="versionDescr" id="versionDescr{{shareId}}" rows="5" wrap="hard">{{message}}</textarea>
            <div>
                {{#if lastMessageTime}}
                <em class="lasttime">上次更新於 {{lastMessageTime}}</em>
                {{/if}}
                <button class="setDescr" type="button">儲存</button>
            </div>
        </li>

        <li>
            <div>
                <div class="icon icon-mail"></div>
                <span>訂閱郵件</span>
                <span class="msg hidden"></span>
            </div>
            <button class="sendSubscrMail" type="button">傳送訂閱郵件({{subscriberNum}})</button>
            <div class="lasttime">
                {{#if lastEmailTime}}
                <em>上次傳送於 <span>{{lastEmailTime}}</span></em>
                {{/if}}
            </div>
        </li>

        <li>
            <div>
                <div class="icon icon-delete"></div>
                <span>取消訂閱</span>
                <span class="msg hidden"></span>
            </div>
            <button class="cancelSubscr" type="button">取消訂閱者({{subscriberNum}})</button>

            {{#if lastCancelTime}}
            <div class="lasttime"><em>上次取消於 <span>{{lastCancelTime}}</span></em></div>
            {{/if}}
        </li>
    </ul>
